{
  "version": 2,
  "root": ".",
  "builds": [
    {
      "src": "frontend/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      },
      "root": "frontend",
      "outputDirectory": "dist"
    },
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/**"] },
      "root": "backend"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ]
}